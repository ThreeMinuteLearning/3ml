#!/bin/bash

set +x
TARGET=$1

[ -z $TARGET ] && TARGET=all

list_descendants ()
{
    local children=$(ps -o pid= --ppid "$1")

    for pid in $children
    do
        list_descendants "$pid"
    done

    echo "$children"
}

CHANGES="No changes"

while true; do
  echo -ne '\033c'
  date +%H:%M:%S
  echo $CHANGES
  make $TARGET
  make_result=$?
  server_pid=0

  if [ $make_result -eq 0 ]; then
    make serve &
    server_pid=$!
  fi

  echo "Server PID is $server_pid"
  CHANGES=$(inotifywait -q --exclude '(\.git|elm-stuff|\.#.*|elm-stuff|\.ghc.*|dist-newstyle|flycheck_.*)' -r -e close_write -e modify -e delete -e create -e move .)

  if [ $server_pid -gt 0 ]; then
    TOKILL=$(list_descendants $server_pid)
    echo "Killing $TOKILL"
    kill $TOKILL
  fi
done
